# --- BASIC SETUP ---
set $mod Mod4

# Font for window titles and UI elements
font pango:Maple Mono NF CN Bold 13

# --- GRUVBOX COLORS ---
set $bg        #282828
set $fg        #ebdbb2
set $red       #cc241d
set $green     #98971a
set $yellow    #d79921
set $blue      #458588
set $purple    #b16286
set $aqua      #689d6a
set $gray      #a89984
set $darkgray  #1d2021

# class                 border      backgr.     text      indicator child_border
client.focused          $green      $green      $darkgray $green    $green
client.focused_inactive $darkgray   $darkgray   $gray     $darkgray $darkgray
client.unfocused        $darkgray   $darkgray   $gray     $darkgray $darkgray
client.urgent           $red        $red        $fg       $red      $red
client.placeholder      $darkgray   $darkgray   $fg       $darkgray $darkgray

# --- GAPS & BORDERS ---
gaps inner 8 
gaps outer 0 
smart_gaps on 
default_border none

# Add to ~/.config/i3/config
default_border pixel 0
default_floating_border pixel 0


# --- WORKSPACE CONFIGURATION ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to Workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Cycle Through Workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Move Container to Workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# --- AUTOSTART ---
exec --no-startup-id feh --bg --scal /home/kanashii/Pictures/wallpapers/Workspaces/3.jpg
exec_always --no-startup-id picom -b
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id killall -q conky; sleep 1; conky
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id ulauncher --hide-window

# --- APP KEYBINDINGS ---
bindsym $mod+b exec --no-startup-id brave-browser
bindsym $mod+f exec --no-startup-id firefox
bindsym $mod+k exec --no-startup-id kitty
bindsym $mod+g exec --no-startup-id ghostty
bindsym $mod+r exec --no-startup-id "rofi -show drun"
bindsym Mod1+space exec --no-startup-id ulauncher
bindsym $mod+c exec --no-startup-id code
bindsym $mod+v exec --no-startup-id codium
bindsym $mod+e exec --no-startup-id nemo

# --- WINDOW MANAGEMENT (WASD) ---
bindsym $mod+q kill
bindsym Mod1+Tab focus next
bindsym Mod1+Shift+Tab focus prev
bindsym Mod1+m fullscreen enable
bindsym Mod1+u fullscreen disable

# Navigation (Focus)
bindsym $mod+w focus up
bindsym $mod+a focus left
bindsym $mod+s focus down
bindsym $mod+d focus right

# Moving Windows
bindsym $mod+Shift+w move up
bindsym $mod+Shift+a move left
bindsym $mod+Shift+s move down
bindsym $mod+Shift+d move right

# Fallback Arrow Keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# --- LAYOUT CONTROLS ---
bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+Shift+x layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# --- RESIZE MODE (WASD) ---
bindsym $mod+z mode "resize"
mode "resize" {
    # WASD resize
    bindsym w resize shrink height 10 px or 10 ppt
    bindsym a resize shrink width 10 px or 10 ppt
    bindsym s resize grow height 10 px or 10 ppt
    bindsym d resize grow width 10 px or 10 ppt

    # Arrows resize
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+z mode "default"
}

# --- SYSTEM CONTROLS ---
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# Audio (PulseAudio)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness (Requires brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# --- CUSTOM SCRIPTS & SCREENSHOTS ---
bindsym Control+Mod1+a exec --no-startup-id ~/.config/i3/scripts/rofi-appearance.sh
bindsym Control+Mod1+w exec --no-startup-id ~/.config/i3/scripts/rofi-wall.sh
bindsym Shift+Print exec --no-startup-id flameshot gui
bindsym Print exec --no-startup-id flameshot full --clipboard
bindsym Control+Print exec --no-startup-id flameshot full -p ~/Pictures

# --- SYSTEM MODE ---
set $mode_system System: [l]ock, [e]xit, [s]uspend, [h]ibernate, [r]eboot, [Shift+s]hutdown
mode "$mode_system" {
    bindsym l       exec --no-startup-id i3lock, mode "default"
    bindsym e       exec --no-startup-id "i3-msg exit", mode "default"
    bindsym s       exec --no-startup-id systemctl suspend, mode "default"
    bindsym h       exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r       exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Control+Escape mode "$mode_system"
